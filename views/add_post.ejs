<%- include('partials/_header.ejs') -%>

<body>

  <%- include('partials/_navigation.ejs') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Yeni Post Ekle</h1>

          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form novalidate>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Başlık</label>
              <input type="text" class="form-control" placeholder="İsim" id="name" required data-validation-required-message="Lütfen isminizi giriniz...">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Detay</label>
              <textarea rows="5" class="form-control" placeholder="Mesaj" id="message" required data-validation-required-message="Lütfen mesajınızı giriniz..."></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Gönder</button>
        </form>
      </div>
    </div>
  </div>

  <hr>

  
  <%- include('partials/_footer.ejs') -%>
