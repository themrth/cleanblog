<%- include('partials/_header.ejs') -%>

<body>

  <%- include('partials/_navigation.ejs') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1> <%=post.title %></h1>
            <h2 class="subheading"> <%=post.detail %> </h2>
            <span class="meta"> <%=post.dateCreated %> </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post.text %></p>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <div class="offset-4 col-xl-4 col-lg-5">
